<h3>Listing Projects</h3>

<table border="1">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Name</th>
			<th>Description</th>
			<th>Status</th>
			<th>Start Date</th>
			<th>Client Name</th>
			<th>Task Count</th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each_with_index do |project, index|%>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= project.name %></td>
			<td><%= project.description %></td>
			<td><%= project.status %></td>
			<td><%= project.start_date %></td>
			<td><%= project.client.try(:name)%></td>
			<td><%= project.tasks.size %></td>
		</tr>
		<% end %>
	</tbody>
	
</table>